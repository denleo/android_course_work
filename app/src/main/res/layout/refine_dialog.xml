<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_temp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:text="@string/your_input"/>


    <TextView
        android:background="@drawable/refine_incorrect_option"
        android:id="@+id/tv_user_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allready"
        android:padding="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="monospace"
        android:textColor="@color/colorBrownDark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_temp3"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_user_input"
        android:id="@+id/tv_temp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal"
        android:text="@string/correct_input"/>

    <TextView
        android:background="@drawable/refine_correct_option"
        android:id="@+id/tv_correct_input"
        android:text="Already"
        android:padding="10dp"
        android:layout_below="@id/tv_temp4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/colorBrownDark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"/>

</RelativeLayout>