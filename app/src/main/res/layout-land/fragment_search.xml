<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <RelativeLayout
        android:layout_below="@+id/search_title"
        android:id="@+id/search_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_partOfSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_enter"
            android:layout_marginStart="25dp"
            android:layout_marginTop="42dp"
            android:padding="3dp"
            android:background="@drawable/default_option_border_bg"
            android:layout_toEndOf="@id/tv_transcription"
            android:clickable="true"
            android:layout="@id/et_enter"
            android:textColor="@color/teal_700"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_transcription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_enter"
            android:layout_marginStart="5dp"
            android:layout_marginTop="48dp"
            android:layout_toEndOf="@id/tv_engWord"
            android:layout="@id/et_enter"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_engWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_enter"
            android:layout_marginTop="48dp"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/et_enter"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="@string/et_hint"
            android:inputType="text"
            android:textColorHint="@color/colorOlive"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/et_enter"
            android:text="@string/search_button"
            android:textSize="12sp"
            app:cornerRadius="40dp"
            app:icon="@drawable/ic_search" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:layout_alignEnd="@id/button"
            android:layout_marginTop="12dp"
            android:progressTint="@color/teal_200"
            android:visibility="invisible" />


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:clipToPadding="false"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:layout_toEndOf="@id/search_layout"
        android:layout_alignParentTop="true"
        android:layout_below="@id/search_layout"
        tools:listitem="@layout/example_item" />


</RelativeLayout>